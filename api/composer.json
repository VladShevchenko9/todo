{
    "name": "my-api/demo",
    "description": "Simple educational REST API in pure PHP with PSR-4 autoloading",
    "type": "project",
    "require": {
        "ext-pdo": "*",
        "ext-json": "*",
        "ext-ctype": "*",
        "guzzlehttp/guzzle": "7.9",
        "illuminate/translation": "^12.44",
        "illuminate/validation": "^12.44",
        "illuminate/filesystem": "^12.44",
        "illuminate/database": "^12.44",
        "vlucas/phpdotenv": "^5.6"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/",
            "Tests\\": "tests/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "9.6"
    }
}
